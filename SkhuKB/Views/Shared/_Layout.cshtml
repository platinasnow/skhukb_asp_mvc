<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.9.1.min.js")" type="text/javascript"></script>

    <style type="text/css">
        .titleDiv
        {
            text-align: right;
            background: #000;
            padding-top: 10px;
            padding-bottom: 10px;
            padding-right: 30px;
        }

        .titleText
        {
            color: #fff;
            float: left;
            font-size: 2em;
            padding-left: 15px;
        }

        .bodyDiv
        {
            border: 1px solid #000;
        }

        .wikiLink
        {
            color: #2a2;
        }

            .wikiLink:HOVER
            {
                color: #f00;
            }
    </style>
</head>

<body>
    <form id="searchForm" method="post" enctype="multipart/form-data">
        <div style="width:100%;">
            <div style="text-align:right;">@Html.ActionLink("로그아웃", "../Login/Logout")</div>
            <div class="titleDiv">
                <div class="titleText">SKHU Knowledge Base</div>
                <select id="selecter" name="selecter">
                    <option value="title">제목</option>
                    <option value="contents">내용</option>
                    <option value="writer">글쓴이</option>
                    <option value="titleContents">제목+내용</option>
                </select>
                <input type="text" name="searchText" /><input type="submit" value="검색" onclick="onSearch()" />
            </div>
            <div class="bodyDiv">
                @RenderBody()
            </div>
        </div>
    </form>
</body>
<script type="text/javascript">
    @*if ('' == '@ViewBag.selecter') {
        alert($("#selecter option:eq(0)"))
        $("#selecter option:eq(0)").attr("selected", "selected");
    } else {
        $("#selecter").val('@ViewBag.selecter');
    }*@
    function onSearch() {
        var searchForm = document.getElementById("searchForm");
        searchForm.action = "/Main/ArticleList";
        searchForm.submit();
    }
</script>
</html>
